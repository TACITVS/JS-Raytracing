{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "types": ["@webgpu/types"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "src",
    
    /* Emit */
    "outDir": "dist",
    "sourceMap": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}