{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "es2017"],
    "types": ["@webgpu/types"],

    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "dist",
    "sourceMap": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/renderer/webgpu-types.d.ts"
  ]
}
